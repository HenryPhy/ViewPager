<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ebf4d869">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_centerVertical="true"
            android:text="全选"
            android:button="@null"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="网络数据"
            android:textSize="20dp"
            android:textColor="#ffffff"/>


        <TextView
            android:id="@+id/one_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:textColor="#f70515"/>

    </RelativeLayout>
<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_weight="6"
    android:id="@+id/vp"

    android:layout_height="0dp"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_main_chat"
            android:checked="true"
            android:button="@null"
            android:layout_marginLeft="70dp"
            android:background="@drawable/message"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_main_contact"
            android:layout_toRightOf="@id/rb_main_chat"
            android:button="@null"
            android:layout_marginLeft="50dp"
            android:background="@drawable/contact" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rb_main_contact"
            android:layout_marginLeft="50dp"
            android:button="@null"
            android:id="@+id/rb_main_setting"
            android:background="@drawable/dynamic" />

    </RadioGroup>

</LinearLayout>